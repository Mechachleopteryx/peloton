{
  "linters": {
    "flake8": {
      "type": "flake8",
      "include": "(\\.py$)"
    },
    "gofmt": {
      "type": "gofmt",
      "include": "(\\.go$)"
    },
    "golint": {
      "type": "golint",
      "include": "(\\.go$)",
      "exclude": ["(^mesos-go/.+\\.go$)", "(^pbgen/.+\\.go$)"]
    },
    "govet": {
      "type": "govet",
      "include": "(\\.go$)",
      "exclude": "(^mesos-go/.+.go$)"
    },
    "json": {
      "type": "json",
      "include": "(\\.json$)"
    }
  }
}
